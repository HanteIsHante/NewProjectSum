<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    //values
    <style name="TranslucentTheme" parent="AppTheme">
    </style>

    <style name="AppWelcome" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/homepage</item>
    </style>
    <style name="Appwelcome" parent="android:Theme.Translucent.NoTitleBar.Fullscreen"/>

    <style name="TextAppearance_TitleBar_Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- title文字样式（和toolbar自带样式一样，可自行修改） -->
    </style>

    <style name="TextAppearance_TitleBar_subTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <!-- 左右文字样式 （和toolbar副标题样式一样，可自行修改）-->
    </style>

    <style name="MyErrorStyle">
        <item name="android:textColor">#007810</item>
    </style>

    <!--背景透明-->
    <style name="Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <!--提示框是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否需要标题-->
        <item name="android:windowNoTitle">true</item>
        <!--对话框的背景-->
        <item name="android:windowBackground">@drawable/pd_shape</item>
        <!--对话框是否悬浮-->
        <item name="android:windowIsFloating">true</item>
        <!--默认Window的content背景-->
        <item name="android:windowContentOverlay">@null</item>
        <!--dialog遮罩透明度-->
        <item name="android:backgroundDimAmount">0.5</item>
        <!--是否需要dialog遮罩-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
