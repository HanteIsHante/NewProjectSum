<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_banner_height"
    android:background="#FF4FA773" >

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/common_banner_height"
        android:layout_height="@dimen/common_banner_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_btn_back"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/common_ic_back" />

    <View
        android:id="@+id/view"
        android:layout_width="0.8dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_back"
        android:background="@color/buy_qouta_progress_not_filled" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_back"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/common_banner_height"
        android:layout_height="@dimen/common_banner_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_btn_back"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_banner_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_btn_back"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:visibility="gone" />

</RelativeLayout>